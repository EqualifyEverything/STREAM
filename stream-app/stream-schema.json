{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "STREAM Schema",
  "type": "object",
  "properties": {
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "message": { "type": "string" },
          "relatedTagIds": {
            "type": "array",
            "items": { "type": "integer" }
          },
          "relatedCodeIds": {
            "type": "array",
            "items": { "type": "integer" }
          },
          "relatedPageIds": {
            "type": "array",
            "items": { "type": "integer" }
          },
          "type": { "type": "string", "enum": ["pass", "error", "violation"] }
        },
        "required": ["message", "relatedTagIds", "relatedCodeIds", "relatedPageIds", "type"]
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "tagId": { "type": "integer" },
          "tagName": { "type": "string" }
        },
        "required": ["tagId", "tagName"]
      }
    },
    "code": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "codeId": { "type": "integer" },
          "code": { "type": "string" }
        },
        "required": ["codeId", "code"]
      }
    },
    "pages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "pageId": { "type": "integer" },
          "pageUrl": { "type": "string" }
        },
        "required": ["pageId", "pageUrl"]
      }
    }
  },
  "required": ["messages", "tags", "code", "pages"]
}
