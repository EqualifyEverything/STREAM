{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "STREAM Schema",
  "type": "object",
  "properties": {
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "message": { "type": "string" },
          "relatedTagIds": {
            "type": "array",
            "items": { "type": "integer" }
          },
          "relatedCodeIds": {
            "type": "array",
            "items": { "type": "integer" }
          },
          "relatedUrlIds": {
            "type": "array",
            "items": { "type": "integer" }
          },
          "type": { "type": "string", "enum": ["pass", "error", "violation"] }
        },
        "required": ["message", "relatedTagIds", "relatedCodeIds", "relatedUrlIds", "type"]
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "tagId": { "type": "integer" },
          "tag": { "type": "string" }
        },
        "required": ["tagId", "tag"]
      }
    },
    "code": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "codeId": { "type": "integer" },
          "code": { "type": "string" }
        },
        "required": ["codeId", "code"]
      }
    },
    "urls": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "urlId": { "type": "integer" },
          "url": { "type": "string" }
        },
        "required": ["urlId", "url"]
      }
    }
  },
  "required": ["messages", "tags", "code", "urls"]
}
